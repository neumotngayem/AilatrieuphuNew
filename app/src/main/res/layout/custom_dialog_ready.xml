<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_cover"
    >
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn đã sẵn sàng đi tìm ai là triệu phú chưa ?"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/tvReady"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi đã sẵn sàng"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/btnReady"
        android:background="@drawable/custom_button2"
        android:layout_below="@+id/tvReady"
        android:textColor="#FFFF"
        android:textSize="14dp"
        android:layout_marginBottom="3dp"
        />

    <Button
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi chưa sẵn sàng"
        android:textColor="#FFFF"
        android:textSize="14dp"
        android:background="@drawable/custom_button2"
        android:layout_below="@id/tvReady"
        android:layout_toRightOf="@+id/btnReady"
        android:id="@+id/btnNotReady"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnReady"
        />
</RelativeLayout>