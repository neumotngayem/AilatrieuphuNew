<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_cover"
    >
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đáp án D là đáp án cuối cùng của bạn ?"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/tvSure"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vâng"
        android:layout_marginLeft="55dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/btnSure"
        android:background="@drawable/custom_button2"
        android:layout_below="@+id/tvSure"
        android:textColor="#FFFF"
        android:textSize="14dp"
        android:layout_marginBottom="3dp"
        />

    <Button
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi sẽ chọn lại"
        android:textColor="#FFFF"
        android:textSize="14dp"
        android:background="@drawable/custom_button2"
        android:layout_below="@id/tvSure"
        android:layout_toRightOf="@+id/btnSure"
        android:id="@+id/btnNotSure"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSure"
        />
</RelativeLayout>